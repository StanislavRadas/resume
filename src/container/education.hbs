<div>
{{#with main}}
<main>
    <section>
        {{> title data="My Educationss" big=true}}
        <ul class="list-group">
            {{#each educations}}
                <li class="list-group-item">
                    {{name}}
                    {{#unless isEnd}}
                    (in progress...)
                    {{/unless}}
                </li>
            {{/each}} 
        </ul>
    </section>
    <section>
        {{> title data="My Certificates"}}
        <ul class="list-group">
            {{#each certificates}}
            <li class="list-group-item">
                {{name}}({{id}})
            </li>
            {{/each}}
        </ul>
    </section>
</main>
{{/with}}
</div>

