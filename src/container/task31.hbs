<main>
    <div class="row">
        <section class="row">
        {{#with navigation}}
            {{#each links}}
                <div class="col-3">
                    <a href="{{href}}" class="btn btn-link">{{text}}</a>
                </div>
            {{/each}}
            {{#with button}}
                <div class="col-3">
                <a href="{{href}}" class="btn btn-primary">{{text}}</a>
                </div>
            {{/with}}
        {{/with}}
        </section>
        <br>
        <hr>
        <br>
    <div>
        {{#with header}}
        <h1>{{title}}</h1>
        <p>{{description}}</p>
        <div>
        {{#with button}}
        <a href="{{link}}" class="btn btn-primary">{{text}}</a>
        {{/with}}
        </div>
        <br>
        {{/with}}
    </div>
    <br>
    <hr>
    </div>
    <div>
        <br>
        {{#with city}}
        <div>
            <h2>{{title}}</h2>
        </div>
        <br>
        <div class="row gy-3 gx-0" >
            {{#each cards}}
                <div class="col-6">
                    <div class="card" style="width: 18rem;">
                        <img src="{{picture.src}}" class="card-img-top" alt="{{picture.alt}}">
                        <div class="card-body">
                            <h5 class="card-title">{{title}}</h5>
                            <p class="card-text">{{description}}</p>
                            <a href="{{button.href}}" class="btn btn-primary">{{button.text}}</a>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
        {{/with}}
    </div>
    <br>
    <hr>
    <div>
        <br>
        {{#with winner}}
        <div>
            <h2>{{title}}</h2>
        </div>
        <br>
        <div>
            {{#with table}}
                <table class="table">
                    <thead>
                        <tr>
                            {{#each head}}
                            <th scope="col">{{this}}</th>
                            {{/each}}
                        </tr>
                    </thead>
                    <tbody>
                        {{#each user}}
                        <tr>
                            <th scope="row">{{place}}</th>
                            <td>{{name}}</td>
                            <td>{{surname}}</td>
                            <td>{{nickname}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            {{/with}}
        </div>
        {{/with}}
    </div>
    <br>
    <hr> 
    <section>
        {{#with gallery}}
        <div>
            <div>
                <h2>{{title}}</h2>
            </div>
            <br>
            <div class="row gx-4">
                {{#each cards}}
                <div class="col-4">
                    <div class="card " style="width: 13rem;">
                        <div class="card-header">
                            {{name}}
                        </div>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">{{items}}</li>
                        </ul>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
        {{/with}}
    </section>
    <br>
    <hr>
    <section>
        <div>
            {{#with relaxion}}
            <div>
                <p class="display-3">{{title}}</p>
            </div>  
            <div class="row gx-0 gy-2">
                {{#each cards}}
                    <div class="col-6">
                        <div class="card text-bg-secondary mb-3" style="max-width: 18rem;">
                            <div class="card-header">{{header}}</div>
                            <div class="card-body">
                                <h5 class="card-title">{{title}}</h5>
                                <p class="card-text">{{description}}</p>
                            </div>
                        </div>
                    </div>
                {{/each}}
            </div>
            {{/with}}
        </div>
    </section>
    <br>
    <hr>
    <section>
        <div>
            {{#with rest}}
                <div class="row">
                    {{#each cards}}
                        <div class="col-6">
                            <div class="card text-center">
                                <div class="card-header">
                                    {{header}}
                                </div>
                                <div class="card-body">
                                    <h5 class="card-title">{{title}}</h5>
                                    <p class="card-text">{{description}}</p>
                                    <a href="#" class="btn btn-primary">{{button}}</a>
                                </div>
                                <div class="card-footer text-body-secondary">
                                    {{footer}}
                                </div>
                            </div>
                        </div>
                    {{/each}}
                </div>
            {{/with}}
        </div>
    </section>
    <br>
    <hr>
    <section>
        <div>
            {{#with proposition}}
            <div>
                <p class="display-2">{{title}}</p>
            </div>
            <div class="row">
                {{#each card}}
                <div class="col-6">
                    <div class="card text-bg-warning mb-3" style="max-width: 18rem;">
                        <div class="card-header">{{header}}</div>
                        <div class="card-body">
                            <h5 class="card-title">{{title}}</h5>
                            <p class="card-text">{{description}}</p>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
            {{/with}}
        </div>
    </section>
    <br>
    <hr>
</main>
<footer>
    <div>
        {{#with footer}}
        <div>
            <h5>{{title}}</h5>
        </div>
            <div class="row g-4">
                <div class="col-3">
                {{#each navigation}}
                <a href="{{href}}" class="btn btn-link">{{text}}</a>
                {{/each}}
                </div>
                <div class="col-3">
                {{#each socialMedia}}
                <a href="{{link}}" class="btn btn-outline-dark">{{name}}</a>
                {{/each}}
                </div>
                <div class="col-4">
                {{#each partners}}
                <a href="{{link}}" class="btn btn-outline-info">{{name}}</a>
                {{/each}}
                </div>
            </div>
        {{/with}}
    </div>
</footer>