<div>
    {{#with main}}
    <main>
        <section>
            {{> title data="All Skills" big=true}}
            <ul class="list-group">
                {{#each skills}}
                <li class="list-group-item">
                    {{name}}
                    {{#if point includeZero=true}} ({{point}}) {{/if}}
                    {{#if isTop}} (top!) {{/if}}
                    {{#unless point includeZero=true}} (not using) {{/unless}}
                    {{#unless point}}
                        {{#if point includeZero=true}}
                        (in progress)
                        {{/if}}
                    {{/unless}}
                </li>
                {{/each}}
            </ul>
        </section>
        <section>
            {{> title data="My Hobbies"}}
            <ol class="list-group">
                {{#each hobbies}}
                    <li class="list-group-item">
                        {{name}}
                        {{#if isMain}}
                        (favourite)
                        {{/if}}
                    </li>
                {{/each}}
            </ol>
        </section>
    </main>
    {{/with}}
</div>

