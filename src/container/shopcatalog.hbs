<header>
    <section class="mb-4">
        {{#with navigation}}
        <div class="card">
            <div class="nav">
                {{#each links}}
                <div class="nav-item">
                    <a class="nav-link" href="{{href}}" target="_blank">{{text}}</a>
                </div>
                {{/each}}
                <div>
                    <a class="nav-link disabled">Disabled</a>
                </div>
            </div>
        </div>
        {{/with}}
    </section>
    <section>
        <div aria-label="breadcrumb">
            <ol class="breadcrumb">
                {{#each breadcrumb}}
                {{#if url}}
                <li class="breadcrumb-item"><a href="{{url}}">{{name}}</a></li>
                {{else}}
                <li class="breadcrumb-item active" aria-current="page">{{name}}</li>
                {{/if}}
                {{/each}}
            </ol>
        </div>
    </section>
</header>
<main>
    <div>
        <div>
            <h1>{{header}}</h1>
        </div>
        <div class="row mt-4">
            {{#each sortBlock}}
                <div class="col-3">
                    <select class="form-select" aria-label="Default select example">
                        <option selected>{{placeholder}}</option>
                        {{#each options}}
                        <option value="{{value}}">{{text}}</option>
                        {{/each}}
                    </select>
                </div>
            {{/each}}
        </div>
        <div class="row">
            {{#with filterBlock}}
                <div class="col-4">
                    <div class="card mt-5">
                        <div class="card-body">
                            <div>
                                {{#with sellers}}
                                    <p>{{title}}</p>
                                    {{#each list}}
                                        <div class="form-check mt-3">
                                            <input class="form-check-input" type="checkbox" value="sellers" id="flexCheckDefault">
                                            <label class="form-check-label" for="flexCheckDefault">
                                                {{value}}
                                            </label>
                                        </div>
                                    {{/each}}
                                {{/with}}
                            </div>
                            <div>
                                <hr>
                            </div>
                            <div>
                                {{#with brands}}
                                    <p>{{title}}</p>
                                    <label class="form-label">
                                    <input class="form-control" placeholder="{{input.placeholder}}">
                                    </label>
                                    {{#each options}}
                                    <div class="form-check mt-3">
                                        <input class="form-check-input" type="checkbox" value="sellers" id="flexCheckDefault">
                                        <label class="form-check-label" for="flexCheckDefault">
                                            {{value}}
                                        </label>
                                    </div>
                                    {{/each}}
                                {{/with}}
                            </div>
                            <div>
                                <hr>
                            </div>
                            <div>
                                {{#with price}}
                                    <p>{{title}}</p>
                                    {{#with range}}
                                    <div>
                                        <label class="form-label">
                                            <input class="form-control" placeholder="{{from}}">
                                        </label>
                                    </div>
                                    <div>
                                        <label class="form-label">
                                            <input class="form-control" placeholder="{{to}}">
                                        </label>
                                    </div>
                                    {{/with}}
                                    <div>
                                        {{#with button}}
                                        <a href="{{link}}" class="btn btn-outline-secondary">{{text}}</a>
                                        {{/with}}
                                    </div>
                                {{/with}}
                            </div>
                            <div>
                                <hr>
                            </div>
                            <div>
                                {{#each filterList}}
                                <div>
                                <p>{{title}}</p>
                                    <div>
                                        {{#each options}}
                                        <div class="mt-3">
                                            <input class="form-check-input" type="checkbox" value="list" id="flexCheckDefault">
                                            <label class="form-check-label" for="flexCheckDefault">
                                                {{value}}
                                            </label>
                                        </div>
                                        {{/each}}
                                    </div>
                                </div>
                                <div>
                                    <hr>
                                </div>
                                {{/each}}
                            </div>
                        </div>
                    </div>
                </div>
            {{/with}}
            <div class="col-8">
                <div class="row">
                    {{#each goodsList}}
                        <div class="col-6 mt-5">
                            {{> catalogItem}}
                        </div>
                    {{/each}}
                </div>
            </div>
        </div>
        <div class="mt-5">
            {{#with service}}
                <div class="card text-center bg-success text-white">
                    <div class="card-body">
                        <h2>{{title}}</h2>
                        <p>{{description}}</p>
                        {{#each buttons}}
                        <a href="{{link}}" class="btn btn-primary">{{text}}</a>
                        {{/each}}
                    </div>
                </div>
            {{/with}}
        </div>
    </div>
</main>
<div class="mt-5">
    <hr>
</div>
<footer>
    <div class="nav">
        <div class="row g-5">
            {{#each footer}}
            <div class="col-2">
                <div class="nav-item">
                    <a href="{{[0].link}}" class="btn btn-link nav-link">{{[0].text}}</a>
                </div>
                <div class="nav-item">
                    <a href="{{[1].link}}" class="btn btn-link nav-link">{{[1].text}}</a>
                </div>
                <div class="nav-item">
                    <a href="{{[2].link}}" class="btn btn-link nav-link">{{[2].text}}</a>
                </div>
                <div class="nav-item">
                    <a href="{{[3].link}}" class="btn btn-link nav-link disabled">{{[3].text}}</a>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</footer>