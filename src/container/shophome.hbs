<header>
    <section class="mb-4">
        {{#with navigation}}
        <div class="card">
        <div class="nav">
            {{#each links}}
            <div class="nav-item">
                <a class="nav-link" href="{{href}}" target="_blank">{{text}}</a>
            </div>
            {{/each}}
            <div>
                <a class="nav-link disabled">Disabled</a>
            </div>
        </div>
        </div>
        {{/with}}
    </section>
</header>
<main>
    <section class="mb-4">
        {{#with newsBlock}}
            <div class="mb-3">
                <h1 class="text-center">{{title}}</h1>
            </div>
            <div class="row gx-2 gy-1">
                {{#each cards}}
                <div class="col-3">
                    <div class="card">
                        <div class="card-header text-bg-dark">
                            {{title}}
                            {{#if isTop}}<span class="badge rounded-pill text-bg-danger">Top</span>{{/if}}
                            {{#if isNew}}<span class="badge rounded-pill text-bg-success">New</span>{{/if}}
                        </div>
                        <div class="card-body text-bg-dark">
                            {{description}}
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        {{/with}}
    </section>
    <hr>
    <section class="mb-4">
        <div>
            {{#with goodsBlock}}
                <div>
                    <div class="nav nav-tabs mb-5">
                        {{#each tabs}}
                        <div class="nav-item">
                             <a class="nav-link {{#if isActive}}active{{/if}}{{#if isDisabled}}disabled{{/if}}">{{text}}</a>
                        </div>
                        {{/each}}
                    </div>
                    <div class="row gy-3">
                        {{#each cards}}
                        <div class="col-4">
                            <div class="card">
                                <img src="{{image}}" class="card-img-top" alt="{{title}}">
                                <div class="card-body">
                                    <h5 class="card-title">{{title}}
                                        {{#if isHot}}<span class="badge rounded-pill text-bg-warning">Hot</span>{{/if}}
                                        {{#if isNew}}<span class="badge rounded-pill text-bg-primary">New</span>{{/if}}
                                    </h5>
                                    <p class="card-text">{{description}}</p>
                                </div>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                </div>
            {{/with}}
        </div>
    </section>
    <hr>
    <section class="mb-4">
        <div>
            {{#with subscribe}}
                <div class="card text-bg-dark">
                    <div class="card-body">
                        <h2 class="card-title">{{header}}</h2>
                        <p class="card-text">{{description}}</p>
                        {{#each buttons}}
                        <div class="mb-2">
                        <a href="{{link}}" class="btn btn-primary">{{text}}</a>
                        </div>
                        {{/each}}
                    </div>
                </div>
            {{/with}}
        </div>
    </section>
    <hr>
    <section class="mb-4">
        <div>
            {{#with service}}
                <div class="card text-center text-bg-success">
                    <div class="card-body">
                        <h2 class="card-title">{{title}}</h2>
                        <p class="card-text">{{description}}</p>
                        {{#each buttons}}
                        <div>
                        <a href="{{link}}" class="btn btn-primary">{{text}}</a>
                        </div>
                        {{/each}}
                    </div>
                </div>
            {{/with}}
        </div>
    </section>
    <hr>
</main>
<footer>
    <section>
        <div class="nav">
        <div class="row g-5">
        {{#each footer}}
        <div class="col-2">
        <div class="nav-item">
            <a href="{{[0].link}}" class="btn btn-link nav-link">{{[0].text}}</a>
        </div>
        <div class="nav-item">
            <a href="{{[1].link}}" class="btn btn-link nav-link">{{[1].text}}</a>
        </div>
        <div class="nav-item">
            <a href="{{[2].link}}" class="btn btn-link nav-link">{{[2].text}}</a>
        </div>
        <div class="nav-item">
            <a href="{{[3].link}}" class="btn btn-link nav-link disabled">{{[3].text}}</a>
        </div>
        </div>
        {{/each}}
        </div>
        </div>
    </section>
</footer>